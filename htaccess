AddHandler cgi-script .pl
RewriteEngine On
RewriteCond %{HTTP:X-Forwarded-SSL} !on
RewriteRule ^$ http://%{HTTP_HOST}%{REQUEST_URI}cgi-bin/awstats.pl [R]
RewriteCond %{HTTP:X-Forwarded-SSL} on
RewriteRule ^$ https://%{HTTP_HOST}%{REQUEST_URI}cgi-bin/awstats.pl [R]

#AuthUserFile stats.htdigests
#AuthName "stats"
#AuthType Digest
#Require valid-user

<Files .*>
order allow,deny
deny from all
</Files>
